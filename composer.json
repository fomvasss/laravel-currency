{
    "name": "fomvasss/laravel-currency",
    "description": "Laravel package for working with multiple currencies, providing currency conversion, exchange rate management, and formatted output",
    "keywords": [
        "money", "currency", "coin", "rate", "convert", "laravel", "exchange", "monobank", "privatbank"
    ],
    "authors": [
        {
            "name": "Vasyl Fomin",
            "email": "fomvasss@gmail.com",
            "role": "Developer"
        }
    ],
    "license": "MIT",
    "require": {
        "php": "^8.0",
        "illuminate/support": "^9.0|^10.0|^11.0|^12.0",
        "illuminate/http": "^9.0|^10.0|^11.0|^12.0",
        "illuminate/cache": "^9.0|^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5|^10.0",
        "orchestra/testbench": "^7.0|^8.0|^9.0"
    },
    "autoload": {
        "psr-4": {
            "Fomvasss\\Currency\\": "src"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Fomvasss\\Currency\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Fomvasss\\Currency\\ServiceProvider"
            ],
            "aliases": {
                "Currency": "Fomvasss\\Currency\\Facades\\Currency"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
